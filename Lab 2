02)
public class Item 
{
    //data
    private int location;
    private String description;
    
    //methods
    public Item(int location,String description)
    {
        
    }
}

03)
public class Item 
{
    //data
    private int location;
    private String description;
    
    //methods
    public Item(int location,String description)
    {
        this.location=location;
        this.description=description;
    }
}

04)
public class Item 
{
    //data
    private int location;
    private String description;
    
    //methods
    public void setLocation(int l)
    {
        location=l;
    }
    public int getlocation()
    {
        return location;
    }
    public void setDescription(String d)
    {
        description=d;
    }
    public String getDescription()
    {
        return description;
    }
}

05)
public class Monster extends Item 
{
    
}

06)
public class Monster extends Item 
{
    //data
    private int i;
    private String s;
    
    //methods
    public Monster(int i,String s)
    {
        this.i=i;
        this.s=s;
    }
}
07)
public class ItemObj 
{
    public static void main(String[] args) 
    {
        Monster m1=new Monster(5,"Colombo");
        Item i1=new Item(10,"Matara");
        System.out.println("The location is "+i1.getlocation()+" The description is "+i1.getDescription());
        System.out.println("The location is "+m1.getlocation()+" The description is "+m1.getDescription());
    }
}

